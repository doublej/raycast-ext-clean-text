{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "clean-text",
  "title": "Clean Text",
  "description": "Clean clipboard text using the fabric clean_text pattern",
  "icon": "command-icon.png",
  "author": "jurrejan",
  "categories": ["Productivity"],
  "license": "MIT",
  "commands": [
    {
      "name": "clean-text",
      "title": "Clean Text",
      "description": "Pipe clipboard through fabric clean_text pattern",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "fabricPath",
      "type": "textfield",
      "title": "Fabric Binary Path",
      "description": "Path to the fabric binary",
      "required": false,
      "default": "fabric"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.83.0",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^20.8.10",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build --skip-types -e dist -o dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
